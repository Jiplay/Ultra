# Docker Environment Configuration
# This file contains environment variables for Docker containers

# Application
PORT=8080
GO_ENV=development
DEBUG=true
JWT_SECRET=your-development-secret-key-change-in-production

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=ultra_user
POSTGRES_PASSWORD=ultra_password
POSTGRES_DB=ultra_db
POSTGRES_SSL=disable

# MongoDB Database
MONGODB_URI=mongodb://ultra_user:ultra_password@mongo:27017/ultra?authSource=admin
MONGO_INITDB_ROOT_USERNAME=ultra_user
MONGO_INITDB_ROOT_PASSWORD=ultra_password
MONGO_INITDB_DATABASE=ultra

# Redis (if needed for caching/sessions)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (for development with mailcatcher)
SMTP_HOST=mailcatcher
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@ultra.local

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json